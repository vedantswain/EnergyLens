<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/seg1"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:background="@drawable/segment" />

    <View
        android:id="@+id/seg2"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/seg1"
        android:layout_toRightOf="@+id/seg1"
        android:background="@drawable/segment" />

    <TextView
        android:id="@+id/segText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/segText2"
        android:layout_alignBottom="@+id/segText2"
        android:layout_alignRight="@+id/seg1"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/seg3"
        android:layout_width="55dp"
        android:layout_height="12dp"
        android:layout_below="@+id/segText2"
        android:layout_toRightOf="@+id/seg2"
        android:background="@drawable/segment" />

    <TextView
        android:id="@+id/segText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/segText2"
        android:layout_alignBottom="@+id/segText2"
        android:layout_alignRight="@+id/seg3"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/seg4"
        android:layout_width="55dp"
        android:layout_height="12dp"
        android:layout_below="@+id/segText3"
        android:layout_toRightOf="@+id/seg3"
        android:background="@drawable/segment"
        android:visibility="visible" />

    <TextView
        android:id="@+id/segText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/segText3"
        android:layout_alignBottom="@+id/segText3"
        android:layout_alignRight="@+id/seg4"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/seg5"
        android:layout_width="44dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/seg4"
        android:layout_toRightOf="@+id/seg4"
        android:background="@drawable/segment" />

    <TextView
        android:id="@+id/segText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/segText4"
        android:layout_alignBottom="@+id/segText4"
        android:layout_alignRight="@+id/seg5"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/segText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seg2"
        android:layout_toLeftOf="@+id/seg3"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/segText1"
        android:layout_alignLeft="@+id/segText1"
        android:text="Appliance"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>